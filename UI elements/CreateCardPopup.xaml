<UserControl x:Class="PlumTask.UI_elements.CreateCardPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlumTask.UI_elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400" Background="Transparent">

    <Grid Background="#0e1621">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create a new card" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="20" Foreground="#fdfdfd" Grid.Row="0"/>

        <Grid Grid.Row="1" Background="#182533" Margin="10,5,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox x:Name="Title" Text="Title" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="200" Height="30" Background="#0e1621" Foreground="#fdfdfd" BorderBrush="#2b5278" Grid.Row="0"/>
            <TextBox x:Name="Desc" Text="..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Width="300" Height="200" Background="#0e1621" Foreground="#fdfdfd" BorderBrush="#2b5278" Grid.Row="1"/>
            <Button Content="Create" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10" Width="100" Height="30" Background="#2b5278" Foreground="#fdfdfd" Grid.Row="2"/>
        </Grid>

    </Grid>
    



</UserControl>
